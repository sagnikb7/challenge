{{>_navbar}}
<div class="container">
    <div class="mt-2">
        <h1>Welcome: {{role}}, {{username}}</h1>
        {{#if isTeacher}}
        <button onclick="createClassRoom()" class="btn btn-primary">Add classroom</button>
        {{/if}}
    </div>
</div>

<script>
    function createClassRoom() {
        fetch('/classrooms', {
            method: 'PUT'
        }).then(response => response.json())
            .then(data => { alert(JSON.stringify(data)) })
            .catch((e) => {
                console.error(e);
                alert("Error")
            })
    }

</script>